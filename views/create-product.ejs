<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-2 card">
            <form action="/create-product" method="post">
                <h2>Add New Product</h2>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" placeholder="" id="title" name="title">
                        </div>
                    </div>
                    <!--  col-md-6   -->

                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control" rows="5"></textarea>
                        </div>
                    </div>
                    <!--  col-md-6   -->
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="company">Price</label>
                            <input type="number" name="price" id="price" class="form-control" placeholder=""
                                id="company">
                        </div>
                    </div>
                    <!--  col-md-6   -->

                    <div class="col-md-6">

                        <div class="form-group">
                            <label for="phone">Quantity</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" placeholder="phone">
                        </div>
                    </div>
                    <!--  col-md-6   -->
                </div>
                <!--  row   -->
                <div class="row mt-2">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary mb-2">Submit</button>
                    </div>

                    <div class="col-6 mt-2">
                        <label for="">Is Featured</label>
                        <span>
                            <input type="radio" name="isFeatured" value="yes" id="" /> Yes
                        </span>
                        <span>
                            <input type="radio" name="isFeatured" value="no" id="" /> No
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>